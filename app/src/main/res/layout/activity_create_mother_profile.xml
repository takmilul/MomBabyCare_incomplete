                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/red_5"
                  android:visibility="invisible"/>

               </FrameLayout>
            </LinearLayout>
            
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="22dp">
               
               <Spinner
                  android:id="@+id/unionSpnr"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>
               
               <Spinner
                  android:id="@+id/thanaSpnr"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>
            </LinearLayout>
            
            
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="22dp">
               
               <Spinner
                  android:id="@+id/districtSpnr"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>
               
               <Spinner
                  android:id="@+id/divisionSpnr"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>
            
            </LinearLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/addressErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
