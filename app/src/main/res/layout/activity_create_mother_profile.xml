               android:layout_marginTop="5dp">
               
            <View
               android:id="@+id/underline_view_guardian_mobile_no"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/color8"
               android:visibility="invisible"/>
               
               <View
               android:id="@+id/second_underline_view_guardian_mobile_no"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/red_5"
               android:visibility="invisible"/>

            </FrameLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/guardiantsMobileErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/monthlyIncomeET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:cursorVisible="true"
                  android:hint="Monthly Income"
                  android:inputType="numberSigned"
                  android:paddingLeft="16.0dip"
                  android:paddingRight="16.0dip"
                  android:singleLine="true"
                  android:textColor="@color/white"
                  android:textCursorDrawable="@null"
                  android:textSize="16sp"/>
            
            </android.support.design.widget.TextInputLayout>
            
            <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp">
               
            <View
               android:id="@+id/underline_view_monthly_income"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/color8"
               android:visibility="invisible"/>
               
               <View
               android:id="@+id/second_underline_view_monthly_income"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/red_5"
               android:visibility="invisible"/>

            </FrameLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/monthlyIncomeErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/dateOfBirthET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:editable="false"
                  android:cursorVisible="false"
                  android:hint="Date of Birth"
                  android:onClick="datePicker"
                  android:paddingLeft="16.0dip"
                  android:paddingRight="16.0dip"
                  android:textColor="@color/white"
                  android:textCursorDrawable="@null"
                  android:textSize="16sp"/>
            
            </android.support.design.widget.TextInputLayout>
            
            <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp">
               
               <View
                  android:id="@+id/underline_view_dob"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/color8"
                  android:visibility="invisible"/>
               
               <View
                  android:id="@+id/second_underline_view_dob"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/red_5"
                  android:visibility="invisible"/>
            
            </FrameLayout>
         
         </LinearLayout>
         
         <TextView
            android:id="@+id/dateOfBirthErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80.0dip"
            android:background="@drawable/login_input_field"
            android:orientation="vertical"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:textColor="@color/white"
            android:textColorHint="@color/white_70_transparent"
            android:textCursorDrawable="@null"
            android:textSize="16sp">
            
            <TextView
               android:id="@+id/bloodGroupTV"
               android:layout_width="match_parent"
               android:layout_height="40.0dip"
               android:gravity="center_vertical"
               android:hint="Blood Group"
               android:textColor="@color/white_70_transparent"
               android:textColorHint="@color/white_70_transparent"
               android:textSize="16.0dip"/>
            
            <Spinner
               android:id="@+id/bloodGroupSpnr"
               android:layout_width="match_parent"
               android:layout_height="40.0dip"
               android:layout_weight="50"/>
         
         </LinearLayout>
         
         <TextView
            android:id="@+id/bloodGroupErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
