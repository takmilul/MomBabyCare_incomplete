               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/weightET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:cursorVisible="true"
                  android:hint="Weight"
