<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/createMother"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="#787878"
   android:focusableInTouchMode="true"
   android:fitsSystemWindows="true"
   android:orientation="vertical"
   tools:context="com.hackathon.appsoul.mombabycare.activity.CreateMotherProfileActivity">
   
   <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/white_10_transparent"
      android:elevation="4dp"
      android:fitsSystemWindows="true"
      app:layout_scrollFlags="scroll|exitUntilCollapsed"
      app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
   
   <ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="16dp"
         android:orientation="vertical">
         
         <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            
            <RadioButton
               android:id="@+id/newMotherRBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingRight="16dp"
               android:text="New Mother"
               android:textColor="@color/white_70_transparent"/>
            
            <RadioButton
               android:id="@+id/pregnentRBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pregnent Woman"
               android:textColor="@color/white_70_transparent"/>
         </RadioGroup>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/nameET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#00000000"
                  android:cursorVisible="true"
                  android:hint="Name"
                  android:inputType="textPersonName"
                  android:paddingLeft="16.0dip"
                  android:paddingRight="16.0dip"
                  android:textColor="@color/white"
                  android:textCursorDrawable="@null"
                  android:textSize="16sp"/>
            
            </android.support.design.widget.TextInputLayout>
            
            <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp">
               
            <View
               android:id="@+id/underline_view_name"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/color8"
               android:visibility="invisible"/>
               
               <View
               android:id="@+id/second_underline_view_name"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/red_5"
               android:visibility="invisible"/>

            </FrameLayout>
         
         </LinearLayout>
         
         <TextView
            android:id="@+id/nameErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/passwordET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#00000000"
                  android:cursorVisible="true"
                  android:hint="Password"
                  android:inputType="textPassword"
                  android:paddingLeft="16.0dip"
                  android:paddingRight="16.0dip"
                  android:singleLine="true"
                  android:textColor="@color/white"
                  android:textColorHint="@color/white_70_transparent"
                  android:textCursorDrawable="@null"
                  android:textSize="16sp"/>
            
            </android.support.design.widget.TextInputLayout>
            
            <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp">
               
            <View
               android:id="@+id/underline_view_password"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/color8"
               android:visibility="invisible"/>
               
               <View
               android:id="@+id/second_underline_view_password"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/red_5"
               android:visibility="invisible"/>

            </FrameLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/passwordErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:gravity="center_vertical"
               android:textColorHint="@color/white_70_transparent">
               
               <EditText
                  android:id="@+id/retypeET"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:cursorVisible="true"
                  android:hint="Retype Password"
                  android:inputType="textPassword"
                  android:paddingLeft="16.0dip"
                  android:paddingRight="16.0dip"
                  android:singleLine="true"
                  android:textColor="@color/white"
                  android:textCursorDrawable="@null"
                  android:textSize="16sp"/>
            
            </android.support.design.widget.TextInputLayout>
            
            <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp">
               
            <View
               android:id="@+id/underline_view_retype_password"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/color8"
               android:visibility="invisible"/>
               
               <View
               android:id="@+id/second_underline_view_retype_password"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/red_5"
               android:visibility="invisible"/>

            </FrameLayout>
         </LinearLayout>
         
         <TextView
            android:id="@+id/retypePasswordErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_input_field"
            android:orientation="vertical">
            
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/login_input_field"
               android:orientation="vertical">
               
               <android.support.design.widget.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="48dp"
                  android:gravity="center_vertical"
                  android:textColorHint="@color/white_70_transparent">
                  
                  <EditText
                     android:id="@+id/adressET"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:cursorVisible="true"
                     android:hint="Address"
                     android:inputType="textMultiLine"
                     android:paddingLeft="16.0dip"
                     android:paddingRight="16.0dip"
                     android:singleLine="true"
                     android:textColor="@color/white"
                     android:textCursorDrawable="@null"
                     android:textSize="16sp"/>
               
               </android.support.design.widget.TextInputLayout>
               
               <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp">
                  
               <View
