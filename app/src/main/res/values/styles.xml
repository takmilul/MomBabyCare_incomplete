<resources>

   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light">
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      <item name="colorAccent">@color/black_40_transparent</item>
      <!--<item name="windowActionBar">false</item>-->
   </style>
   
   <style name="FullscreenTheme" parent="AppTheme">
      <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
      <item name="android:windowActionBarOverlay">true</item>
      <item name="android:windowBackground">@null</item>
      <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
      <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
   </style>

   <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
      <item name="android:background">@color/black_overlay</item>
   </style>

   <style name="AppTheme.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>

   <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

   <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

   <style name="timeline_topbuttons_style">
      <item name="android:background">@android:color/transparent</item>
      <item name="android:scaleType">centerInside</item>
   </style>

   <style name="timeline_bubble_icon_style">
      <item name="android:scaleType">center</item>
      <item name="android:paddingTop">8dp</item>
      <item name="android:paddingBottom">0dp</item>
      <item name="android:paddingLeft">0dp</item>
      <item name="android:paddingRight">12dp</item>
   </style>

   <style name="timeline_diarydate_style">
      <item name="android:textSize">@dimen/font_large_size</item>
      <item name="android:textColor">@color/light_grey</item>
      <item name="android:textStyle">normal</item>
   </style>

   <style name="timeline_diarynotes_style">
      <item name="android:textSize">@dimen/font_large_size</item>
      <item name="android:textColor">@color/black</item>
      <item name="android:textStyle">normal</item>
   </style>

   <style name="edit_button_style">
      <item name="android:paddingLeft">20dp</item>
      <item name="android:paddingBottom">10dp</item>
      <item name="android:scaleType">centerInside</item>
      <item name="android:background">@android:color/transparent</item>
   </style>

   <style name="edit_input_style">
      <item name="android:textSize">@dimen/font_large_size</item>
      <item name="android:textStyle">normal</item>
      <item name="android:layout_marginTop">8dp</item>
      <item name="android:layout_marginLeft">16dp</item>
      <item name="android:layout_marginRight">16dp</item>
   </style>

   <style name="edit_warning_style">
      <item name="android:textSize">@dimen/font_large_size</item>
      <item name="android:textColor">@color/red</item>
      <item name="android:textStyle">normal</item>
   </style>

   <style name="edit_photo_style">
      <item name="android:textSize">@dimen/font_large_size</item>
      <item name="android:textColor">@color/dark_grey</item>
      <item name="android:textStyle">normal</item>
   </style>
   
   <style name="accent" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorAccent">@color/color8</item>
   </style>
   
   <string name="timer">00:00:00</string>


</resources>
